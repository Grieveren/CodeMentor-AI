# JWT Configuration
JWT_ACCESS_SECRET=your-very-secure-access-token-secret-key-here
JWT_REFRESH_SECRET=your-very-secure-refresh-token-secret-key-here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Password Security
BCRYPT_SALT_ROUNDS=12

# OAuth Configuration
# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Client Configuration
CLIENT_URL=http://localhost:3000

# Database (already configured in main .env)
DATABASE_URL=postgresql://username:password@localhost:5432/codementor_ai

# Session Secret (for OAuth)
SESSION_SECRET=your-session-secret-key-here
