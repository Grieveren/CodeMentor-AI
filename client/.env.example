# Client Environment Variables
# Copy this file to .env.local and fill in your values

# API Configuration
VITE_API_BASE_URL=http://localhost:3001
VITE_API_TIMEOUT=10000

# App Configuration
VITE_APP_NAME=CodeMentor AI
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_AI_ASSISTANCE=true
VITE_ENABLE_COLLABORATION=true
VITE_ENABLE_REAL_TIME_EDITING=true

# Specification Editor Configuration
VITE_MONACO_EDITOR_CDN=https://cdn.jsdelivr.net/npm/monaco-editor@0.45.0
VITE_MAX_DOCUMENT_SIZE=1048576
VITE_AUTO_SAVE_INTERVAL=30000
VITE_VALIDATION_DEBOUNCE=1000

# AI Service Configuration
VITE_AI_SERVICE_URL=http://localhost:3001/api/ai
VITE_AI_REVIEW_TIMEOUT=30000
VITE_AI_SUGGESTIONS_ENABLED=true

# Collaboration Configuration
VITE_WS_BASE_URL=ws://localhost:3001
VITE_COLLABORATION_TIMEOUT=5000
VITE_MAX_COLLABORATORS=10

# Authentication (if using third-party auth)
VITE_AUTH_PROVIDER_URL=
VITE_AUTH_CLIENT_ID=

# External Services
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=
